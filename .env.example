# SSH Connection Settings
SSH_HOST=your-remote-host.com
SSH_PORT=22
SSH_USERNAME=your-username
SSH_PRIVATE_KEY_PATH=/path/to/your/private/key
# Optional: SSH_PRIVATE_KEY_PASSPHRASE=your-key-passphrase (if your private key is encrypted)
# Optional: SSH_PASSWORD=your-password (not recommended, use keys instead)

# API Server Settings
API_PORT=3000
API_HOST=localhost
API_KEY=your-secret-api-key-change-this

# MCP Server Settings
MCP_SERVER_NAME=vps-execute-mcp
MCP_SERVER_VERSION=1.0.0

# Security Settings
ENABLE_COMMAND_WHITELIST=false
ALLOWED_COMMANDS=ls,pwd,whoami,df,free,top,ps
MAX_COMMAND_TIMEOUT=300000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log
